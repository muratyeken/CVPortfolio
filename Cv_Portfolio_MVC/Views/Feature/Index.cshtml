@model Entities.Concrete.Feature
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@using (Html.BeginForm("Index", "Feature", FormMethod.Post))
{
    @Html.HiddenFor(x=>x.FeatureID)
    <br />

    @Html.Label("Header")
    @Html.TextBoxFor(x=>x.Header, new {@class="form-control"})
    <br />

    @Html.Label("Name Surname")
    @Html.TextBoxFor(x=>x.Name, new {@class="form-control"})
    <br />

    @Html.Label("Position")
    @Html.TextBoxFor(x=>x.Title, new {@class="form-control"})
    <br />

    <button class="btn btn-success">Update</button>

    @*<button href="/Feature/Index" class="btn btn-success">Update Feature</button>
    <a href="/Feature/Index" class="btn btn-primary">Features</a>*@

}


