@using Entities.Concrete
@model List<About>

<!-- ======= About Section ======= -->
<section id="about" class="about">
    <div class="container">
        @foreach (var item in Model)
        {
            <div class="section-title">
                <h2>About</h2>
                <p>Bir internet sitesinde karşıma bir yazilim egitimi reklamı çıktı. Sonrasında bu eğitime katılmaya karar verdim.</p>
            </div>

            <div class="row">
                <div class="col-lg-4" data-aos="fade-right">
                    <img src="~/Template/assets/img/profile-img.jpg" class="img-fluid" alt="">
                </div>
                <div class="col-lg-8 pt-4 pt-lg-0 content" data-aos="fade-left">
                    <h3>.Net Developer &amp;&nbsp; Web Designer</h3>
                    <p class="fst-italic">
                        Eylül 1990 İzmir doğumluyum. İlköğretim,lise ve üniversite eğitimlerimi de şehrimde tamamladım. İş hayatına küçük yaşlarda başladım ve eğitim alırken de devam ettim. Askerlikten sonra tecrübeli olduğum iş yerine, sadece akademik eğitimini aldığım Kimya sektöründe çalışmaya başladım..
                    </p>
                    <div class="row">
                        <div class="col-lg-6">
                            <ul>
                                <li><i class="bi bi-chevron-right"></i> <strong>Age:</strong> <span>@item.Age</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Website:</strong> <span>www.hepsimuroda.com</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Phone:</strong> <span>@item.Phone</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>City:</strong> <span>@item.Address</span></li>
                            </ul>
                        </div>
                        <div class="col-lg-6">
                            <ul>
                                <li><i class="bi bi-chevron-right"></i> <strong>Dogum Tarihi:</strong> <span>09 16 1990</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Degree:</strong> <span>Master</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Email:</strong> <span>@item.Mail</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Freelance:</strong> <span>Available</span></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

        }        

    </div>
</section><!-- End About Section -->